<Window x:Class="NovelNest.UserInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NovelNest.UserInterface"
        mc:Ignorable="d" Background="Gray"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="68"/>
            <RowDefinition/>
            <RowDefinition Height="68"/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <Menu Height="20" VerticalAlignment="Top" Background="Gray">
            <MenuItem Header="Menü">
                <MenuItem x:Name="closeApplication"
                          Header="Schließen"
                          Click="closeApplication_Click"/>
                <MenuItem x:Name="loginWindowTest"
                          Header="LoginTest"
                          Click="loginWindowTest_Click"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
